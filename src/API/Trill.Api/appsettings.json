{
  "app": {
    "name": "Trill"
  },
  "jwt": {
    "certificate": {
      "location": "certs/localhost.pfx",
      "password": "test",
      "rawData": ""
    },
    "issuer": "trill",
    "validIssuer": "trill",
    "validateAudience": false,
    "validateIssuer": true,
    "validateLifetime": true,
    "expiry": "01:00:00"
  },
  "logger": {
    "level": "information",
    "excludePaths": ["/", "/ping", "/metrics"],
    "excludeProperties": [
      "api_key",
      "access_key",
      "ApiKey",
      "ApiSecret",
      "ClientId",
      "ClientSecret",
      "ConnectionString",
      "Password",
      "Email",
      "Login",
      "Secret",
      "Token"
    ],
    "console": {
      "enabled": true
    },
    "file": {
      "enabled": true,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "seq": {
      "enabled": true,
      "url": "http://localhost:5341",
      "apiKey": "secret"
    },
    "tags": {}
  },
  "messaging": {
    "useBackgroundDispatcher": true,
    "inbox": {
      "enabled": true,
      "collectionName": "inbox"
    },
    "outbox": {
      "enabled": true,
      "collectionName": "outbox",
      "interval": "00:00:01"
    }
  },
  "mongo": {
    "connectionString": "mongodb://localhost:27017",
    "database": "trill",
    "disableTransactions": true
  },
  "vault": {
    "enabled": false,
    "url": "http://localhost:8200",
    "authType": "token",
    "token": "secret",
    "kv": {
      "enabled": false,
      "path": "trill/settings"
    }
  }
}
